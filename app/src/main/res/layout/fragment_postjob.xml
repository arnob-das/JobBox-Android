<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FADCDCDC">


    <ScrollView
        android:layout_margin="10sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Position"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginTop="10sp"
                android:inputType="text"
                android:hint="Junior Software Developer"
                android:textSize="20sp"
                />

            <!--            type of workplace-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type Of Workplace"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On-Site"
                android:textSize="20sp"
                android:textStyle="normal"/>

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Remote" />

            <!--            job location-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Location"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />
            <EditText
                android:id="@+id/jobLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginTop="10sp"
                android:inputType="text"
                android:hint="Dhaka,Bangladesh"
                android:textSize="20sp"
                />

            <!--            company name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />
            <EditText
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginTop="10sp"
                android:inputType="text"
                android:hint="Brain Station 23"
                android:textSize="20sp"
                />
            <!--            employment type-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Employment Type"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />

            <CheckBox
                android:id="@+id/fullTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Time"
                android:textSize="20sp"
                android:textStyle="normal"/>

            <CheckBox
                android:id="@+id/partTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Part Time" />
            <CheckBox
                android:id="@+id/intern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Intern" />

            <!--            job description-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Description"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:ems="10"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginTop="10sp"
                android:inputType="text"
                android:textSize="20sp"
                />

            <!--            salary-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />
            <EditText
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginTop="10sp"
                android:inputType="text"
                android:hint="45000"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/postJobBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Post Job"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@color/button"
                android:textColor="#FFFFFF"
                android:paddingVertical="16dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>