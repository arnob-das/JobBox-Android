<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".splashScreen.SplashScreen">

    <RelativeLayout
        android:id="@+id/splashtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="JOB BOX" />
    </RelativeLayout>

    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <RelativeLayout
        android:id="@+id/splashBg"
        android:layout_below="@+id/splashtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="242dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/splashbg" />
    </RelativeLayout>

   <LinearLayout
       android:id="@+id/heading"
       android:layout_below="@+id/splashBg"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30sp"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/splashTextLine1"
           android:textStyle="bold"
           android:textSize="40sp"
           />
       <TextView
           android:id="@+id/underLine"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/splashTextLine2"
           android:textStyle="bold"

           android:textSize="40sp"
           android:textColor="@color/splashTextHighlight"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/splashTextLine3"
           android:textStyle="bold"
           android:textSize="40sp"
           />
   </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/splashParagraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/splashLargeText"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            />
        <ImageView
            android:id="@+id/splashScreenButton"
            android:layout_below="@+id/splashParagraph"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:src="@drawable/rightarrow" />
    </RelativeLayout>




</RelativeLayout>